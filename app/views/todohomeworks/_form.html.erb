<% if @todohomework.errors.present? %>
  <ul>
    <% @todohomework.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
<% end %>

<div class="form container">
  <%= form_for @todohomework do |f| %>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>
    <div class="form-group">  
      <%= f.label :date %>
      <%= f.text_field :date, class: "form-control" %>
    </div>
    <%= f.submit class: 'btn btn-default'%>
    <%= link_to 'Back to index',todohomeworks_path , class: 'btn btn-default' %>
  <% end %>
</div>
